    if !flag(buildAll)
        buildable:       False
    hs-source-dirs:      app/1_Getting-started/1_Hello-window
    main-is:             Hello-window.hs
    ghc-options:         -threaded -rtsopts -with-rtsopts=-N
    build-depends:       base
