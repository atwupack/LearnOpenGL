extra-source-files:  README.md
cabal-version:       >=1.10

flag buildAll
  Description: Build all programs
  Default:     False

library
    hs-source-dirs:      src
    exposed-modules:     LOGL.Window, LOGL.Texture, LOGL.FRP, LOGL.Camera
    build-depends:       base >= 4.7 && < 5
                        , OpenGL
                        , bytestring
                        , filepath
                        , OpenGLRaw
                        , GLFW-b
                        , monad-loops
                        , GLUtil
                        , reactive-banana
                        , containers
                        , linear
    default-language:    Haskell2010

